---
import { Image } from 'astro:assets';
import blogImage from '../assets/images/blog-pic.avif';
const siteTitle = import.meta.env.SITE_TITLE;
---
<div class="image-container">
  <Image src={blogImage} alt="ブログトップ画像" loading="eager" />
  <div class="image-text">
    <div class="main-text">{siteTitle}</div>
    <div class="sub-text">書く、これしか出来ないから。</div>
  </div>
</div>

<style>
  .image-container {
    position: relative;
    width: 70%;
    height: auto;
    margin: 0 auto 40px;
    overflow: hidden;
  }
  .image-container img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  @media (max-width: 767px) {
    .image-container {
      width: 90%;
    }
    .main-text {
      font-size: 1.5em;
    }
    .sub-text {
      font-size: 0.8em;
    }
  }
  @media (max-width: 480px) {
    .main-text {
      font-size: 1.2em;
    }
    .sub-text {
      font-size: 0.7em;
    }
  }
  .image-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
    width: 90%;
    -webkit-user-select: none;
    user-select: none;
  }
  .main-text {
    font-size: 2em;
    margin-bottom: 10px;
    white-space: nowrap;
    -webkit-user-select: none;
    user-select: none;
  }
  .sub-text {
    font-size: 1em;
    -webkit-user-select: none;
    user-select: none;
  }
</style>