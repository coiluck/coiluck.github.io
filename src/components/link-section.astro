---
export interface Props {
  title: string;
  description: string;
  links: Array<{
    url: string;
    title: string;
    description: string;
  }>;
}

const { title, description, links } = Astro.props;
---

<div class="container">
  <div class="header">
    <h3>{title}</h3>
    <p class="setumei">{description}</p>
  </div>
  <div class="accounts-box">
    {links.map((link) => (
      <a href={link.url} class="account" target="_blank" rel="noopener noreferrer">
        <p class="site-mei">{link.title}</p>
        <p class="kuwashiku">{link.description}</p>
      </a>
    ))}
  </div>
</div>
<style>
  .container {
    position: relative;
    width: 70%;
    margin: 80px auto 40px;
  }
  .accounts-box {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin: 20px 0;
  }

  .account {
    display: block;
    text-decoration: none;
    border: 1px solid #000;
    padding: 15px;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  .account.is-poyo {
    animation: pulse .4s;
  }
  @keyframes pulse {
    10% { transform: scale(1.2); }
	  40% { transform: scale(.9); }
	  60% { transform: scale(1.04); }
	  80% { transform: scale(.98); }
  }

  .site-mei {
    margin: 0;
    font-size: 1.2em;
    font-weight: bold;
    color: #000;
  }

  .kuwashiku {
    margin: 5px 0 0 0;
    font-size: 0.9em;
    color: #666;
  }

  .setumei {
    margin-bottom: 20px;
  }
  .header h3 {
    margin: 20px 0;
  }
  .header p {
    margin: 20px 0;
  }
</style>