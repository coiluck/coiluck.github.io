        .replace(/\{:\s*\.blog-link\s*\}/g, '')  // {: .blog-link } ã‚’é™¤å»
        .replace(/<[^>]+>/g, '')     // HTMLã‚¿ã‚°ã‚’ã™ã¹ã¦é™¤å»
        .trim();

      if (moreTagIndex === -1 && plainText.length > 50) {
        ogDescription = plainText.substring(0, 50) + '...';
