---
import Topbar from '../components/topbar.astro';
import Layout from '../layouts/Layout.astro';
import fromSideIcon from '../assets/images/icons/fromSide.avif';
import hornIcon from '../assets/images/icons/horn.avif';
import spaceIcon from '../assets/images/icons/space.avif';
import cafeIcon from '../assets/images/icons/cafe.avif';
// アイコン用
import profileIcon from '../assets/images/profile-icon.avif';
import catIcon from '../assets/images/cat.avif';
---


<Layout pageTitle="vault">
	<Topbar />
	<div class="container">
		<img class="profile-picture" src={profileIcon.src} alt="アイコン">
	  <div class="line"></div>
	</div>
	<div class="content">
		<div class="box" data-link="/links">
			<img src={fromSideIcon.src} alt="アイコン1">
			<span>アカウント</span>
		</div>
		<div class="box" data-link="/love">
			<img src={hornIcon.src} alt="アイコン2">
			<span>Love</span>
		</div>
		<div class="box" data-link="404.html">
			<img src={spaceIcon.src} alt="アイコン3">
			<span>未設定</span>
		</div>
		<div class="box" data-link="/create">
			<img src={cafeIcon.src} alt="アイコン4">
			<span>制作物</span>
		</div>
  </div>
	<style>
		.container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 90px auto 0;
    }
    .profile-picture {
      width: 150px;
      height: 150px;
			margin-bottom: 20px;
      border-radius: 30%;
      border: 1px solid #000;
      box-shadow: 2px 2px 10px 0px rgba(0, 0, 0, 0.5);
    }
		.line {
			width: 70%;
			max-width: 600px;
			height: 1px;
			background-color: #888;
			margin: 20px auto;
		}

		.content {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			width: 70%;
			margin: 15px auto 80px;
		}
    .box {
			display: flex;
      align-items: center;
			position: relative;
      width: 100%;
			max-width: 600px;
      height: 80px;
			margin: 15px auto;
      box-shadow: 8px 8px 8px 0px rgba(255, 127, 126, 0.45), -2px -2px 20px 0px rgba(255, 127, 126, 0.4);
      border-radius: 5px;
      cursor: pointer;
      transition: transform 0.3s ease;
      overflow: hidden;
    }
    .box.animate {
      animation: pulse .4s forwards;
    }
    @keyframes pulse {
      0% {
        transform: scale(1.12);
        opacity: 0.8;
      }
      40% { 
        transform: scale(.98); 
        opacity: 0.8;
      }
      60% { 
        transform: scale(1.08); 
        opacity: 0.8;
      }
      80% {
        transform: scale(1.02);
        opacity: 0.6;
      }
      100% {
        transform: scale(1.05);
        opacity: 0.8;
      }
    }
    .box img {
      width: 60px;
      height: 60px;
      margin-left: 10px;
      object-fit: cover;
      position: absolute;
      left: 0;
    }
    .box span {
      width: 100%;
      text-align: center;
      z-index: 1;
    }
		@media (max-width: 767px) {
			.content {
				width: 80%;
			}
			.line {
				width: 80%;
			}
		}
    @media (max-width: 480px) {
      .content {
				width: 90%;
			}
			.line {
				width: 90%;
			}
    }
	</style>
	<script define:vars={{ profileIconSrc: profileIcon.src, catIconSrc: catIcon.src }}>
		/* <div class="box">の中に data-id="newTab"を入れると新しいタブで開く */
    document.querySelectorAll('.box').forEach(box => {
      box.addEventListener('click', function() {
        const link = this.getAttribute('data-link');
        const target = this.getAttribute('data-id') === 'newTab' ? '_blank' : '_self';
        window.open(link, target);
      });
    });

    const boxes = document.querySelectorAll('.box');

    function startAnimation(event) {
   	  const box = event.currentTarget;
    	clearTimeout(box.animationTimeout);
     	box.classList.add('animate');
    	box.animationTimeout = setTimeout(() => {
        box.classList.remove('animate');
    	}, 400);
		}

		boxes.forEach(box => {
    	box.addEventListener('mouseenter', startAnimation);
    	box.addEventListener('click', startAnimation);
		});

    // ページ読み込み時に画像をランダムに表示
    updateIcon();

    function updateIcon() {
      const imgNum = Math.floor(Math.random() * 20) + 1;
      const img = document.querySelector('.profile-picture');
      if (img && imgNum % 5 === 0) {
        img.src = catIconSrc;
      } else {
        img.src = profileIconSrc;
      }
      console.log(imgNum);
    }
	</script>
</Layout>