---
import Layout from '../layouts/Layout.astro';
import Topbar from '../components/topbar.astro';
import LinkPreviewBox from '../components/link-preview-box.astro';
import { Image } from 'astro:assets';
import linksImage from '../assets/images/links.avif';

const ogUrl = new URL(Astro.url.pathname, Astro.site).href;
---

<Layout pageTitle="リンク集" ogUrl={ogUrl} ogDescription="使用アカウントの一覧">
  <Topbar />
  <div class="links-container">
    <h3>リンク集</h3>
    <p>僕が使っているアカウントなど</p>
    <div class="vertical-line"></div>
    <div class="image-container">
      <Image src={linksImage} alt="ココネ" />
    </div>
    <div class="links-box">
      <LinkPreviewBox
        title="GitHub"
        description="Pages用のリポジトリしかない"
        url="https://github.com/coiluck/"
      />
      <LinkPreviewBox
        title="Discord"
        description="あまり見ていないかも"
        url="https://discordlookup.com/user/611161347987734559"
      />
      <LinkPreviewBox
        title="Twitter"
        description="Xではありません"
        url="https://twitter.com/RabbitGbf"
      />
      <LinkPreviewBox
        title="chichi-pui"
        description="AIイラスト。昔はこっちに投稿していた"
        url="https://www.chichi-pui.com/users/coiluck/"
      />
      <LinkPreviewBox
        title="Aipictors"
        description="AIイラスト。こっちに切り替えるつもり"
        url="https://www.aipictors.com/users/6f92b753-d44f-dd7d-6c98-3bb495495278/"
      />
      <LinkPreviewBox
        title="pixiv"
        description="更新しない。ナゾノクサの絵ばかり"
        url="https://www.pixiv.net/users/63923759"
      />
      <LinkPreviewBox
        title="Truth Social"
        description="二日で飽きた"
        url="https://truthsocial.com/@coiluck"
      />
      <LinkPreviewBox
        title="Steam"
        description="遊ぶ"
        url="https://steamcommunity.com/id/coiluck/"
      />
      <LinkPreviewBox
        title="YouTube"
        description="限定公開で動画を共有する時に使う"
        url="https://www.youtube.com/@kozakurakokone"
      />
      <LinkPreviewBox
        title="Misskey"
        description="予備"
        url="https://misskey.io/@Asiraat/"
      />
      <LinkPreviewBox
        title="mixi2"
        description="予備"
        url="https://mixi.social/@coiluck"
      />
    </div>
  </div>
  <style>
    .links-container {
      display: flex;
      flex-direction: column;
      width: 70%;
      min-height: calc(100vh - 90px);
      margin: 0 auto;
      padding: 90px 0;
    }
    .vertical-line {
      width: 100%;
      height: 1px;
      background-color: var(--border);
      margin: 30px auto 30px;
    }
    .links-box {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 10px 20px;
      z-index: 2;
    }
    @media (max-width: 767px) {
      .links-container {
        width: 80%;
      }
    }
    @media (max-width: 480px) {
      .links-container {
        width: 90%;
      }
    }
    .image-container {
      position: fixed;
      left: 0;
      right: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
    }
    .image-container img {
      display: block;
      position: absolute;
      right: 0;
      bottom: 0;
      max-width: 100%;
      height: auto;
      max-height: 80%;
      object-fit: contain;
      object-position: bottom right; 
    }
    @media (max-width: 767px) {
      .image-container {
        height: 100lvh;
      }
    }
  </style>
</Layout>